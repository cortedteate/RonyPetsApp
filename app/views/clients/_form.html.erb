<%= form_for @client, remote: true do |f| %>
    <div class="form-group">
        <h4 class="control-label">Datos del cliente</h4>
    </div>

    <div class="item form-group<%= @client.errors[:name].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :name, "Nombre del cliente: "%>
        <div class="input-group">
            <%= f.text_field :name, {:class=>"form-control", :placeholder=>"Introduzca el nombre completo del cliente"} %>
            <% if @client.errors[:name].any? %>
                <p class="bg-danger"><%= @client.errors[:name].to_s[/\w([^"]*)/]%></p>
            <% end %>
        </div>
    </div>

    <div class="item form-group<%= @client.errors[:address].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :address, "Direccion del cliente: "%>
        <div class="input-group">
            <%= f.text_field :address, {:class=>"form-control", :placeholder=>"Introduzca la direccion del cliente"} %>
            <% if @client.errors[:address].any? %>
                <p class="bg-danger"><%= @client.errors[:address].to_s[/\w(["]*)/]%></p>
            <% end %>
        </div>
    </div>

    <div class="item form-group<%= @client.errors[:phone].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :phone, "Telefono del cliente: "%>
        <div class="input-group">
            <%= f.text_field :phone, {:class=>"form-control", :placeholder=>"Introduzca el telefono del cliente"} %>
            <% if @client.errors[:phone].any? %>
                <p class="bg-danger"><%= @client.errors[:phone].to_s[/\w(["]*)/]%></p>
            <% end %>
        </div>
    </div>

    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit @client.new_record? ? "Crear cliente" : "Actualizar cliente", :class => "btn btn-success"%>
    </div>

<% end %>