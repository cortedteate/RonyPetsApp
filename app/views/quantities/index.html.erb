<h1 class="h3 mb-2 text-gray-800"> Administrar tama√±os y cantidades</h1>

<div>
    <%= link_to new_quantity_path, {remote: true, class: "btn btn-info", id: "add-cat-btn"} do %>
    <span class="fas fa-plus-square"></span>
    <% end %>
</div>
<br>

<div class="card shadow mb-4">
    <div class="card body">
        <div class="table-responsive">
            <table id='tableQuantities' class="table table-bordered" width="100">
                <thead>
                    <tr>   
                        <th>Nombre</th>
                        <th>Epoca</th>
                        <th>Edad</th>
                        <th>Cantidad recomendada</th>
                        <th>Accion a realizar</th>
                    </tr>
                </thead>
                <tbody>
                    <% @quantities.each do |quantity| %>
                        <tr id="quantity_<%= quantity.id %>" >
                            <td style="vertical-align: middle"><%= quantity.size_id != nil ? quantity.size.name : "Vacio" %></td>
                            <td style="vertical-align: middle"><%= quantity.phase %></td>
                            <td style="vertical-align: middle"><%= quantity.age %></td>
                            <td style="vertical-align: middle"><%= quantity.quantity %></td>
                            <td style="vertical-align: middle">
                            <%= link_to "Editar", edit_quantity_path(quantity), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                            <%= link_to "Borrar", quantity, remote: true, method: :delete, data: {confirm: "Desea borrar el registro?"}, class: "btn btn-danger btn-xs" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%= render 'modal_quantities'%>
