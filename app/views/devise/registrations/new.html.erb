<h5>A un paso de iniciar el mejor plan de alimentación para tu mascota!</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class: "form-control form-control-user", placeholder:"Nombre...."%>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class: "form-control form-control-user", placeholder:"Apellido...."%>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user", placeholder:"Correo...."%>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>( minimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder:"Contraseña...." %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user", placeholder:"Confirmar contraseña...." %>
  </div>

  <div class="form-group">
    <%= f.submit "Registrarme", class: "btn btn-primary btn-user btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
