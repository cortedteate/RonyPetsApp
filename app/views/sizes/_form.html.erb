<%= form_for @size, remote: true do |f| %>
    <div class="form-group">
        <h4 class="control-label">Configurar tama√±os</h4>
    </div>

    <div class="item form-group<%= @size.errors[:name].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :name, "Nombre: "%>
        <div class="input-group">
            <%= f.text_field :name, {:class=>"form-control", :placeholder=>"Introduzca el nombre"} %>
            <% if @size.errors[:name].any? %>
                <p class="bg-danger"><%= @size.errors[:name].to_s[/\w([^"]*)/]%></p>
            <% end %>
        </div>
    </div>

    <div class="item form-group<%= @size.errors[:weight].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :weight, "Peso: "%>
        <div class="input-group">
            <%= f.text_field :weight, {:class=>"form-control", :placeholder=>"Introduzca el peso"} %>
            <% if @size.errors[:weight].any? %>
                <p class="bg-danger"><%= @size.errors[:weight].to_s[/\w([^"]*)/]%></p>
            <% end %>
        </div>
    </div>

   
    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit @size.new_record? ? "Crear" : "Actualizar", :class => "btn btn-success"%>
    </div>

<% end %>