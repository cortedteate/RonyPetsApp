<h1 class="h3 mb-2 text-gray-800"> Administrar tama√±os y cantidades</h1>

<div>
    <%= link_to new_size_path, {remote: true, class: "btn btn-info", id: "add-cat-btn"} do %>
    <span class="fas fa-plus-square"></span>
    <% end %>
</div>
<br>

<div class="card shadow mb-4">
    <div class="card body">
        <div class="table-responsive">
            <table id='tableSizes' class="table table-bordered" width="100">
                <thead>
                    <tr>   
                        <th>Nombre</th>
                        <th>Peso</th>
                        <th>Accion a realizar</th>
                    </tr>
                </thead>
                <tbody>
                    <% @sizes.each do |size| %>
                        <tr id="size_<%= size.id %>" >
                            <td style="vertical-align: middle"><%= size.name %></td>
                            <td style="vertical-align: middle"><%= size.weight %></td>
                            <td style="vertical-align: middle">
                            <%= link_to "Editar", edit_size_path(size), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                            <%= link_to "Borrar", size, remote: true, method: :delete, data: {confirm: "Desea borrar #{size.name}?"}, class: "btn btn-danger btn-xs" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%= render 'modal_sizes'%>
