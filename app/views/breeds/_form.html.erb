<%= form_for @breed, remote: true do |f| %>
    <div class="form-group">
        <h4 class="control-label">Configurar razas</h4>
    </div>

    <div class="item form-group<%= @breed.errors[:kind_id].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :kind_id, "Tipo: "%>
        <div class="input-group">
            <%= collection_select(:breed, :kind_id, @kinds, :id, :kind, {:prompt => 'Seleccione un tipo'}, { class: "form-control" }) %>
            <% if @breed.errors[:kind_id].any? %>
                <p class="bg-danger"><%= @breed.errors[:kind_id].to_s[/\w([^"]*)/]%></p>
            <% end %>
        </div>
    </div>

    <div class="item form-group<%= @breed.errors[:name].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :name, "Nombre: "%>
        <div class="input-group">
            <%= f.text_field :name, {:class=>"form-control", :placeholder=>"Introduzca el nombre"} %>
            <% if @breed.errors[:name].any? %>
                <p class="bg-danger"><%= @breed.errors[:name].to_s[/\w([^"]*)/]%></p>
            <% end %>
        </div>
    </div>

    <div class="item form-group<%= @breed.errors[:size_id].any? ? ' has-error has-feedback' : '' %> "> 
        <%= f.label :size_id, "Tamaño: "%>
        <div class="input-group">
            <%= collection_select(:breed, :size_id, @sizes, :id, :name, {:prompt => 'Seleccione un tamaño'}, { class: "form-control" }) %>
            <% if @breed.errors[:size_id].any? %>
                <p class="bg-danger"><%= @breed.errors[:size_id].to_s[/\w(["]*)/]%></p>
            <% end %>
        </div>
    </div>

    
    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit @breed.new_record? ? "Crear" : "Actualizar", :class => "btn btn-success"%>
    </div>

<% end %>